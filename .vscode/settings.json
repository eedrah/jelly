{
  "editor.formatOnSave": true,
  "vim.replaceWithRegister": true,
  "vim.camelCaseMotion.enable": true,
  "vim.highlightedyank.enable": true,
  "vim.visualstar": true,
  "vim.smartRelativeLine": true,
  "vim.normalModeKeyBindingsNonRecursive": [
    // easy-clip > replace with register
    {
      "before": ["s"],
      "after": ["g", "r"]
    },
    {
      "before": ["s", "s"],
      "after": ["g", "r", "r"]
    },
    {
      "before": ["S"],
      "after": ["g", "r", "$"]
    },
    // delete with x and d, cut with m
    {
      "before": ["x"],
      "after": ["\"", "_", "x"]
    },
    {
      "before": ["X"],
      "after": ["\"", "_", "X"]
    },
    {
      "before": ["c"],
      "after": ["\"", "_", "c"]
    },
    {
      "before": ["C"],
      "after": ["\"", "_", "C"]
    },
    {
      "before": ["d"],
      "after": ["\"", "_", "d"]
    },
    {
      "before": ["d", "d"],
      "after": ["\"", "_", "d", "d"]
    },
    {
      "before": ["D"],
      "after": ["\"", "_", "d", "$"]
    },
    {
      "before": ["m"],
      "after": ["d"]
    },
    {
      "before": ["m", "m"],
      "after": ["d", "d"]
    },
    {
      "before": ["M"],
      "after": ["d", "$"]
    },
    // mark with gm
    {
      "before": ["g", "m"],
      "after": ["m"]
    }
  ]
}
